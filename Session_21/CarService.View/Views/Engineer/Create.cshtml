@model CarService.Models.Entities.Engineer

@{
    ViewData["Title"] = "Create";    
}

<h1>Create</h1>

<h4>Engineer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalaryPerMonth" class="control-label"></label>
                <input asp-for="SalaryPerMonth" class="form-control" />
                <span asp-validation-for="SalaryPerMonth" class="text-danger"></span>
            </div>
            <div class="form-group">
             @Html.DropDownListFor(x=> x.ManagerID, new SelectList(ViewBag.managers, "Id" , "Name"), ("Choose a Manager"))
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" style="margin-top: 20px;"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
