@model CarService.Models.Entities.Transaction

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <div class="form-group", style="margin: 20px;">
                @Html.DropDownListFor(x=> x.CarID, new SelectList(ViewBag.cars, "Id" , "Model"), ("Choose a Car"))<br>
            </div>
            <div class="form-group", style="margin: 20px;">
                @Html.DropDownListFor(x=> x.CustomerID, new SelectList(ViewBag.customers, "Id" , "Name"), ("Choose a Customer"))
            </div>
            <div class="form-group", style="margin: 20px;">
                @Html.DropDownListFor(x=> x.ManagerID, new SelectList(ViewBag.managers, "Id" , "Name"), ("Choose a Manager"))
            </div>
            <div class="form-group">
                <label asp-for="TotalPrice" class="control-label"></label>
                <input asp-for="TotalPrice" class="form-control"/>
                <span asp-validation-for="TotalPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="button" style="margin-top: 20px;"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-secondary" style="margin-top: 20px;" >Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
